<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anewsprovider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_600</item>
        <item name="colorPrimaryVariant">@color/orange_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gray_700</item>
        <item name="pageBackground">@color/white</item>
    </style>

    <style name="Theme.Anewsprovider.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Anewsprovider.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Anewsprovider.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Anewsprovider.BorderlessMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/daynight_gray_700_white</item>
        <item name="android:textSize">@dimen/text_nav_menu</item>
        <item name="android:textStyle">normal</item>
        <item name="iconPadding">24dp</item>
        <item name="iconTint">@color/daynight_gray_700_white</item>
    </style>

    <style name="Theme.Anewsprovider.MenuTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/daynight_gray_700_white</item>
        <item name="android:textSize">@dimen/text_nav_menu</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>